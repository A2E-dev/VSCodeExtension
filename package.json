{
    "name": "vext",
    "displayName": "U2RE utils pack and toolkit",
    "description": "U2RE utils pack and toolkit",
    "version": "0.0.1",
    "engines": { "vscode": "^1.100.0" },
    "icon": "./assets/service.png",
    "categories": [
        "Education",
        "Other",
        "AI",
        "Chat"
    ],
    "activationEvents": [],
    "main": "./dist/extension.mjs",
    "contributes": {
        "menus": {
            "editor/context": [
                {
                    "command": "vext.ltm.paste",
                    "group": "ML@1"
                },
                {
                    "command": "vext.ltm.convert",
                    "group": "ML@1"
                },
                {
                    "command": "vext.mtl.paste",
                    "group": "ML@1"
                },
                {
                    "command": "vext.mtl.convert",
                    "group": "ML@1"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "managerView",
                    "title": "Manager View",
                    "icon": "assets/folder.svg"
                },
                {
                    "id": "gptView",
                    "title": "GPTunnel View",
                    "icon": "assets/openai.svg"
                }
            ]
        },
        "views": {
            "managerView": [
                {
                    "icon": "assets/folder.svg",
                    "type": "webview",
                    "id": "vext.managerView",
                    "name": "Manager View",
                    "contextualTitle": "Manager View"
                }
            ],
            "gptView": [
                {
                    "icon": "assets/openai.svg",
                    "type": "webview",
                    "id": "vext.gptView",
                    "name": "GPTunnel View",
                    "contextualTitle": "GPTunnel View"
                }
            ]
        },
        "commands": [
            {
                "command": "vext.openWebview",
                "title": "Open GPTunnel View"
            },
            {
                "command": "vext.ltm.convert",
                "title": "Convert to LaTeX"
            },
            {
                "command": "vext.ltm.paste",
                "title": "Paste as LaTeX"
            },
            {
                "command": "vext.mtl.convert",
                "title": "Convert to MathML"
            },
            {
                "command": "vext.mtl.paste",
                "title": "Paste as MathML"
            }
        ]
    },
    "scripts": {
        "vscode:build": "vsce package --allow-missing-repository --out ./dist",
        "vscode:prepublish": "npm run package",
        "compile": "npm run check-types && npm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "npm run check-types && npm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src --fix",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^20.17.57",
        "@types/vscode": "^1.100.0",
        "@typescript-eslint/eslint-plugin": "^8.10.0",
        "@typescript-eslint/parser": "^8.7.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.5.2",
        "esbuild": "^0.25.5",
        "eslint": "^9.25.1",
        "mathml-to-latex": "^1.4.1",
        "npm-run-all": "^4.1.5",
        "tsx": "^4.19.4",
        "typescript": "^5.8.3"
    }
}
